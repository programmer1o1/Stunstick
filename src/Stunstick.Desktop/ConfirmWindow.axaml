<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Stunstick.Desktop.ConfirmWindow"
        Width="420"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Confirm">
  <StackPanel Margin="12" Spacing="10">
    <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="OK" IsDefault="True" Click="OnOkClicked" />
      <Button Content="Cancel" IsCancel="True" Click="OnCancelClicked" />
    </StackPanel>
  </StackPanel>
</Window>
